{% props title = '', icon = '', date = '', location = '', asset = '', description = '' %}

<article class="card_info--container flex-column">

    <div class="card_info--title flex-row justify-content-between align-items-start">

        <div class="flex-column">

            <div class="flex-row gap-5 card_info--title_text_information">
                <p>{{ date }}</p>
                <p>|</p>
                <p class="text-italic">{{ location }}</p>
            </div>
            <h3 class="text-uppercase">{{ title }}</h3>

        </div>

        <img src="{{ asset }}" alt="{{ icon }}">

    </div>

    <p class="card_info--content">{{ description|raw }}</p>

</article>

<style>
    .card_info--title {
        .card_info--title_text_information {
            p {
                font-size: .8rem;
            }
        }

        img {
            width: 75px;
        }
    }
</style>
