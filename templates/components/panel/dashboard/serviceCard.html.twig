{% props application = null %}

<div class="col-md-6 col-lg-3">
    <div class="card">
        <a href="{{ application_primary_url(application) }}" target="{{ application_primary_url_target(application) }}" class="card-body text-decoration-none p-4 text-center">
            <img class="avatar avatar-xl mb-3 p-2 rounded" src="{{ application.avatarUrl }}" alt="Service Avatar">
            <h3 class="m-0 mb-1 text-black">{{ application.name }}</h3>
            <div class="text-secondary">{{ application.description }}</div>
            {% if application.type is not empty %}
                <div class="mt-3">
                    {% for tag in application.type %}
                        <span class="badge" style="background-color: {{ tag.color }} !important;">{{ tag.name }}</span>
                    {% endfor %}
                </div>
            {% endif %}
        </a>
        <div class="d-flex">
            <a href="{{ application.url }}" target="_blank" class="card-btn">
                <twig:ux:icon name="tabler:link" class="me-2" width="24" height="24" />
                Lien
            </a>

            {% if application.hasInterface %}
                <a href="{{ path('app_panel_application_interface', {id: application.id}) }}" target="_self" class="card-btn">
                    <twig:ux:icon name="tabler:app-window" class="me-2" width="24" height="24" />
                    Interface
                </a>
            {% endif %}
        </div>
    </div>
</div>
