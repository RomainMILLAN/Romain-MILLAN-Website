{% trans_default_domain 'app' %}

{% extends 'base.html.twig' %}

{% block title '- Portfolio' %}

{% block header %}
	{% include 'portfolio/components/header.html.twig' %}
{% endblock %}

{% block main %}
	<div class="portfolio--container-main">
		{% include 'portfolio/components/home.html.twig' %}
		{% include 'portfolio/components/aboutme.html.twig' %}
		{% include 'portfolio/components/projects.html.twig' %}

		{% include 'portfolio/components/mobile_formation.html.twig' %}
		{% include 'portfolio/components/mobile_experience.html.twig' %}
		{% include 'portfolio/components/desktop_fe.html.twig' %}
		{% include 'portfolio/components/contact.html.twig' %}

		<script src="{{ asset('static/js/nextButtonRemoveMobileHeader.js') }}"></script>
		<script src="{{ asset('static/js/closeMobileNavWhenClick.js') }}"></script>
