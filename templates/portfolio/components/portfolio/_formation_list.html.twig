
{% trans_default_domain 'front' %}

{% for i in 100..1 %}
    {% set title_extended = "frontend.formation.#{ i }.title_extended"|trans %}
    {% if title_extended == "frontend.formation.#{ i }.title_extended" %}
        {% set title_extended = '' %}
    {% endif %}

    {% set title = "frontend.formation.#{ i }.title"|trans %}
    {% if title != "frontend.formation.#{ i }.title" %}
        {% include 'portfolio/components/portfolio/_fe_card.html.twig' with {
            'date': "frontend.formation.#{ i }.date"|trans,
            'title': title,
            'title_extended': title_extended,
            'location': "frontend.formation.#{ i }.location"|trans,
            'current': "frontend.formation.#{ i }.current"|trans,
            'city': "frontend.formation.#{ i }.city"|trans
        } %}
    {% endif %}

{% endfor %}
