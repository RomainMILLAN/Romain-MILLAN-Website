{% extends 'base.html.twig' %}

{% trans_default_domain 'front' %}

{% block header %}
    <section class="mobile_header">

        <div id="mobile_nav--container">

            <div class="mobile_nav--background"></div>
            <div class="mobile_nav--header">
                <a class="mobile_nav-logo" href="{{path('app_front_portfolio')}}">
                    <img src="{{asset('build/front/static/img/logo/icon.svg', 'front')}}" alt="Icone RomainMILLAN"/>
                </a>
                <div class="mobile_nav--button" tabindex="110">
                    <span class="mobile_nav--button_icon"></span>
                    <span class="mobile_nav--button_icon"></span>
                    <span class="mobile_nav--button_icon"></span>
                </div>
            </div>

            <div id="mobile_nav--content" tabindex="0">

                <ul>

                    <twig:rm-tag
                        width="230px"
                        isFilledBlack="true"
                        hasRedirect="true"
                    />

                    <li>
                        <a role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'home'}) }}>{{ 'navigation.portfolio'|trans }}</a>
                    </li>
                    <li>
                        <a role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'aboutme'}) }}>{{ 'navigation.aboutme'|trans }}</a>
                    </li>
                    <li>
                        <a role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'work'}) }}>{{ 'navigation.works'|trans }}</a>
                    </li>
                    <li>
                        <a role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'experiences'}) }}>{{ 'navigation.experiences'|trans }}</a>
                    </li>
                    <li>
                        <a role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'formations'}) }}>{{ 'navigation.formations'|trans }}</a>
                    </li>
                    <li class="nav_small">
                        <p>© 2023-{{ 'now' | date('Y') }} <a href="{{ absolute_url(path('redirect')) }}">{{ absolute_url(path('redirect')) }}</a>, {{ 'footer.all_right_reserved'|trans }}</p>
                        <p>{{ 'footer.no_reproduce'|trans }}</p>
                    </li>

                </ul>

            </div>
        </div>

    </section>

    <section class="desktop_header">

        <twig:rm-tag
            width="230px"
            isFilledBlack="true"
            hasRedirect="true"
        />

        <nav class="desktop_header--navigation">
            <a class="desktop_header--navigation_item cursor-pointer" tabindex="0" role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'home'}) }}>{{ 'navigation.portfolio'|trans }}</a>
            <a class="desktop_header--navigation_item cursor-pointer" tabindex="0" role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'aboutme'}) }}>{{ 'navigation.aboutme'|trans }}</a>
            <a class="desktop_header--navigation_item cursor-pointer" tabindex="0" role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'work'}) }}>{{ 'navigation.works'|trans }}</a>
            <a class="desktop_header--navigation_item cursor-pointer" tabindex="0" role="button" {{ stimulus_action('scroll-to', 'scroll', 'click', {id: 'experiences'}) }}>{{ 'navigation.experiences'|trans }}</a>
        </nav>

    </section>
{% endblock %}

{% block footer %}
    <div>
        <div class="footer_navigation--container flex-row align-items-start justify-content-start">

            <img src="{{ asset('build/front/static/img/logo/icon.svg', 'front') }}" alt="Icone Romain MILLAN"/>

            <div class="footer_navigation--item flex-column m-0 p-0">
                <h6 class="text-underline m-0">Navigation</h6>
                <a href="{{ path('app_front_portfolio') }}">Portfolio</a>
                <a href="#">Mentions Légales</a>
            </div>

            <div class="footer_navigation--item flex-column m-0 p-0">
                <h6 class="text-underline m-0">Contact</h6>
                <a href="mailto:contact@romainmillan.fr">Mail</a>
                <a href="https://github.com/RomainMILLAN/">Github</a>
                <a href="{{ asset('build/front/static/upload/CV_MILLAN_Romain.pdf', 'front') }}" target="_blank">Curriculum Vitae</a>
                <a href="https://www.linkedin.com/in/romain-millan/">LinkedIn</a>
            </div>

        </div>

        <hr>

        <p class="text-italic">© 2023-{{ 'now' | date('Y') }} <a href="{{ absolute_url(path('redirect')) }}">{{ absolute_url(path('redirect')) }}</a>, {{ 'footer.all_right_reserved'|trans }}</p>
    </div>
{% endblock %}
