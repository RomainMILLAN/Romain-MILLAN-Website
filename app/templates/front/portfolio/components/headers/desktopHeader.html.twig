
{% trans_default_domain 'front' %}

<div class="desktop_header">
    <div class="desktop_nav-logo">
        <twig:rm-tag
            width="200px"
            isStrokeWhite="true"
            isStrokeAnimated="true"
            hasRedirect="true"
        />
    </div>
    <nav>
        <li onclick="scrollToIdDiv('home')">{{ 'portfolio.header.nav.home'|trans }}</li>
        <li onclick="scrollToIdDiv('aboutme')">{{ 'portfolio.header.nav.aboutme'|trans }}</li>
        <li onclick="scrollToIdDiv('projects')">{{ 'portfolio.header.nav.projects'|trans }}</li>
        <li onclick="scrollToIdDiv('fe')">{{ 'portfolio.header.nav.fomations_experiences'|trans }}</li>
        <li onclick="scrollToIdDiv('contact')">{{ 'portfolio.header.nav.contact'|trans }}</li>

        {% if app.user is not null %}
            <li><a href="{{ path('app_panel_dashboard') }}">{{ 'portfolio.header.nav.panel'|trans }}</a></li>
        {% endif %}

        {% if app.request.locale == 'fr' %}
          <li><a href="{{ path('app_front_portfolio', {'_locale': 'en'}) }}"><img src="{{ asset('build/front/static/img/utils/en.svg', 'front') }}" alt="Icone english"></a></li>
        {% else %}
          <li><a href="{{ path('app_front_portfolio', {'_locale': 'fr'}) }}"><img src="{{ asset('build/front/static/img/utils/fr.svg', 'front') }}" alt="Icone french"></a></li>
        {% endif %}
    </nav>
</div>
