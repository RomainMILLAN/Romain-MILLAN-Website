
{% trans_default_domain 'front' %}

<div class="contact" id="contact">
    <hr class="separed_tabs">

    <div class="portfolio_title">
        <h2>{{ 'portfolio.contact.title'|trans }} <span class="colored">?</span></h2>
        <p>{{ 'portfolio.contact.description'|trans }}</p>
    </div>

    <div class="contact_content">

        <div class="contact_list">
            <div class="contact_content_div">
                <img src="{{ asset('build/front/static/img/contact/mail.svg', 'front') }}" alt="Icone email"/>

                <div class="contact_content_div_content">
                    <a href="{{ 'portfolio.contact.links.email-1'|trans }}" target="_blank">
                        <p>{{ 'portfolio.contact.email-1'|trans }}</p>
                    </a>
                    <a href="{{ 'portfolio.contact.links.email-2'|trans }}" target="_blank">
                        <p>{{ 'portfolio.contact.email-2'|trans }}</p>
                    </a>
                </div>
            </div>

            <div class="contact_content_div">
                <img src="{{ asset('build/front/static/img/contact/linkedin.svg', 'front') }}" alt="Icone linkedin"/>

                <div class="contact_content_div_content">
                    <a href="{{ 'portfolio.contact.links.linkedin'|trans }}" target="_blank">
                        <p>{{ 'portfolio.contact.linkedin'|trans }}</p>
                    </a>
                </div>
            </div>

            <div class="contact_content_div">
                <img src="{{ asset('build/front/static/img/contact/instagram.svg', 'front') }}" alt="Icone linkedin"/>

                <div class="contact_content_div_content">
                    <a href="{{ 'portfolio.contact.links.instagram'|trans }}" target="_blank">
                        <p>@{{ 'portfolio.contact.instagram'|trans }}</p>
                    </a>
                </div>
            </div>

            <div class="contact_content_div">
                <img src="{{ asset('build/front/static/img/contact/github.svg', 'front') }}" alt="Icone github"/>

                <div class="contact_content_div_content">
                    <a href="{{ 'portfolio.contact.links.github'|trans }}" target="_blank">
                        <p>{{ 'portfolio.contact.github'|trans }}</p>
                    </a>
                </div>
            </div>
        </div>

        <twig:rm-tag
            width="200px"
			isStrokeAnimated="true"
			isStrokeWhite="true"
			hasRedirect="true"
            classes="contact_image"
		/>
    </div>



</div>
