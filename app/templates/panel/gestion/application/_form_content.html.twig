<div class="d-flex flex-row justify-content-between mb-3">
    <div class="col-md-6 px-2">
        <label class="form-label">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name, {attr: {
            class: 'form-control',
        }}) }}
    </div>

    <div class="col-md-6 px-2">
        <label class="form-label">{{ form_label(form.description) }}</label>
        {{ form_widget(form.description, {attr: {
            class: 'form-control',
        }}) }}
    </div>
</div>

<div class="d-flex flex-row justify-content-between mb-3">
    <div class="col-md-6 px-2">
        <label class="form-label">{{ form_label(form.url) }}</label>
        {{ form_widget(form.url, {attr: {
            class: 'form-control',
        }}) }}
    </div>

    <div class="col-md-6 px-2">
        <label class="form-label">{{ form_label(form.icon) }}</label>
        {{ form_widget(form.icon, {attr: {
            class: 'form-control',
        }}) }}
        <p class="text-muted">Utiliser uniquement ce lot d'icone <a href="https://github.com/homarr-labs/dashboard-icons">https://github.com/homarr-labs/dashboard-icons</a></p>
    </div>
</div>

<div class="d-flex flex-row justify-content-between mb-3">
